# CCAS Docker Environment Configuration
# Copy this file to .env and fill in the values

# Database
DB_PASSWORD=postgres_secure_password

# Debug mode (True/False)
DEBUG=False
LOG_LEVEL=INFO

# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://your-api-identifier
AUTH0_SECRET=your-auth0-secret-for-sessions
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret

# Email/SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@alhashargroup.com

# Frontend/API URLs (for production, use your actual domain)
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:8000/api/v1
WS_URL=ws://localhost:8000/ws
